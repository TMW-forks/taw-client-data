<?xml version="1.0"?>
<sprite>

	<imageset name="base" src="graphics/sprites/monsters/tortured-soul.png" width="32" height="64" />

	<action name="stand" imageset="base">
		<animation>
			<frame index="0" delay="500"/>
			<frame index="1" delay="500"/>
		</animation>
	</action>

	<action name="dead" imageset="base">
		<animation>
			<frame index="2" delay="250"/>
			<frame index="3" delay="250"/>
			<frame index="4" delay="250"/>
			<frame index="5" delay="250"/>
			<frame index="6" delay="250"/>
			<frame index="7" delay="15000"/>
		</animation>
	</action>

</sprite>
